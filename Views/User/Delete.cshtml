@model Users

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this user?</h5>

        <dl class="row">
            <dt class="col-sm-3">Username:</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Role:</dt>
            <dd class="col-sm-9">@Model.RoleId</dd>

            <dt class="col-sm-3">Profile Picture:</dt>
            <dd class="col-sm-9">
                <img src="~/images/users/@Model.PicturePath" alt="User Image" class="img-thumbnail" width="150" />

            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
